# vim:ft=gitconfig:noet:sw=2
[user]
	email = mateusduboli@gmail.com
	name = Mateus Dubiela Oliveira

[merge]
	tool = nvim

[mergetool]
	keepBackup = false
	prompt = true

[mergetool "nvim"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[push]
	default = current

[branch]
	autosetuprebase = always

[format]
	pretty=oneline

[pretty]
	bigline=%h %aN

[alias]
	tree = "log --graph --pretty=oneline --abbrev-commit --decorate --all --date=relative"
	st = "status -sb"
	fulldiff = "!tig origin/master..HEAD"
	please = "push --force-with-lease"

[git-up "fetch"]
	all = true
	prune = true

[commit]
	template = ~/.git-commit-template.txt

[core]
	autocrlf = input
	editor = nvim
	pager = less -RXF
	excludesfile = ~/.gitignore

[includeIf "gitdir:~/Code/Booking/"]
	path = ~/.gitconfig.booking

[include]
	path = ~/.gitconfig.local
[color]
	diff = auto
	status = auto
	branch = auto
